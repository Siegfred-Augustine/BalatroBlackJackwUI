@model BlackJackBalatro.Services.GameState
<div>
    <h2>Computer</h2>
  
    <div class="card-container">
        @foreach (Card card in @Model.CurrentCompHand)
        {
            <div class="card ">
                <span class="value">@card.value of</span>
                <span class="suite">@card.suite</span>
            </div>
        }
    </div>
    
</div>