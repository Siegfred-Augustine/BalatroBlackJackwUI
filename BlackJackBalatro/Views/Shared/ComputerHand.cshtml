@model BlackJackBalatro.Services.GameState
<div>
    <h2>Computer</h2>
  
    <div class="card-container">
        @foreach (Card card in @Model.CurrentCompHand)
        {
            var url = Url.Content("~/assets/" + card.value + "_of_" + card.suite + ".png");
            <div class="card" style="background-image: url('@url')">
            </div>
        }
    </div>
    
</div>